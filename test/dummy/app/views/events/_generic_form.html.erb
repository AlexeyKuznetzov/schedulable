    <%= f.label :schedule %><br>
    <%= f.schedule_select :schedule, style: :bootstrap, input_types: {date: :date_select, time: :time_picker, datetime: :datetime_picker} %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>